<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.aplicatieandroidip.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_LoginFragment_to_principalfrag"
            app:destination="@id/principalfrag" />
    </fragment>

    <fragment
        android:id="@+id/principalfrag"
        android:name="com.example.aplicatieandroidip.principalfrag"
        android:label="Home">
        <action
            android:id="@+id/action_principalfrag_to_bluetoothfrag"
            app:destination="@id/bluetoothfrag" />
    </fragment>

    <fragment
        android:id="@+id/bluetoothfrag"
        android:name="com.example.aplicatieandroidip.BluetoothFragment"
        android:label="Manual Control" />

</navigation>
